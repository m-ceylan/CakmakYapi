
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Giriş Yap</title>

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="/admintemplate/full/global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="/admintemplate/full/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/admintemplate/full/assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="/admintemplate/full/assets/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="/admintemplate/full/assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="/admintemplate/full/assets/css/colors.min.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="/admintemplate/full/global_assets/js/main/jquery.min.js"></script>
    <script src="/admintemplate/full/global_assets/js/main/bootstrap.bundle.min.js"></script>
    <script src="/admintemplate/full/global_assets/js/plugins/loaders/blockui.min.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script src="/admintemplate/full/global_assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script src="/admintemplate/full/assets/js/app.js"></script>
    <script src="/admintemplate/full/global_assets/js/demo_pages/login.js"></script>
    <!-- /theme JS files -->

</head>
<body class="bg-slate-800">
    <div class="page-content">
        <div class="content-wrapper">
            <div class="content d-flex justify-content-center align-items-center">
                <form class="login-form" method="post" action="@Url.Action("SignIn","Login")">
                    @Html.AntiForgeryToken()
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <i class="icon-people icon-2x text-warning-400 border-warning-400 border-3 rounded-round p-3 mb-3 mt-1"></i>
                                <h5 class="mb-0">Giriş Yap</h5>
                                <span class="d-block text-muted">Yönetici arayüzünde oturum açmak için size özel verilen kullanıcı bilgileriniz ile giriş yapınız.</span>
                            </div>
                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input type="text" name="txtEmail" class="form-control" placeholder="E-posta adresi ya da kullanıcı adı.." required>
                                <div class="form-control-feedback">
                                    <i class="icon-user text-muted"></i>
                                </div>
                            </div>
                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input type="password" name="txtPassword" class="form-control" placeholder="Hesap şifresi..." required>
                                <div class="form-control-feedback">
                                    <i class="icon-lock2 text-muted"></i>
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <div class="form-check mb-0">
                                    <label class="form-check-label">
                                        <input type="checkbox" name="remember" class="form-input-styled" checked data-fouc>
                                        Beni Hatırla
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Giriş Yap <i class="icon-circle-right2 ml-2"></i></button>
                            </div>


                            <div class="alert-area">
                                @if (TempData["Success"] != null)
                                {
                                    <div class="alert alert-success alert-thin" role="alert">@Html.Raw(TempData["Success"])</div>
                                }

                                @if (TempData["Info"] != null)
                                {
                                    <div class="alert alert-info alert-thin" role="alert">@Html.Raw(TempData["Info"])</div>
                                }

                                @if (TempData["Warning"] != null)
                                {
                                    <div class="alert alert-warning alert-thin" role="alert">@Html.Raw(TempData["Warning"])</div>
                                }

                                @if (TempData["Error"] != null)
                                {
                                    <div class="alert alert-danger alert-thin" role="alert">@Html.Raw(TempData["Error"])</div>
                                }
                            </div>


                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>